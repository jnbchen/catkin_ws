<!-- -*- mode: XML -*- -->
<!-- run all nodes for data collection and live display in fake car -->

<launch>

  <!-- declare arguments with default values -->
  <arg name="filename" default="/media/jinbo/Work/Data_set/ibeo/20181105-140951.idc"/>
  <arg name="model"/> 
  <arg name="gui" default="True" /> 

  <!-- node for can dumper -->
  <!--<include file="$(find can_dumper)/six_channels.launch" />-->

  <!-- node for velodyne -->
  <include file="$(find velodyne_pointcloud)/launch/64e_points.launch" />

  <!-- node for ibeo_had -->
  <include file="$(find ibeo_had)/launch/idc_parser.launch" >
    <arg name="filename" value="$(arg filename)" />
  </include>

  <include file="$(find ibeo_had)/launch/visualizer.launch" />


  <param name="robot_description" textfile="$(find data_fusion)/urdf/fusion.urdf" />
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="$(arg gui)"/> 
  </node>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find data_fusion)/config/fusion.rviz"/>

  



</launch>
